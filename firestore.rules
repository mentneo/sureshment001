rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents for anyone
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to create their own user document
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to create orders
    match /orders/{orderId} {
      allow create: if request.auth != null;
    }
    
    // Allow authenticated users to access only their own orders
    match /orders/{orderId} {
      allow read, update, delete: if request.auth != null && 
          resource.data.userId == request.auth.uid;
    }
    
    // Allow admins to access and modify all documents
    match /{document=**} {
      allow write: if request.auth != null && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow all users to read products
    match /products/{productId} {
      allow read: if true;
    }
    
    // Allow all users to read videos
    match /videos/{videoId} {
      allow read: if true;
    }
  }
}
